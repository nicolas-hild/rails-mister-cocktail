<div class="btn btn-nico">
  <%= link_to 'Add a cocktail', new_cocktail_path %>
</div>
<div class="row justify-content-left">
  <% @cocktails.each do |cocktail| %>
    <div class="col-3">
      <%= link_to cocktail_path(cocktail) do %>
        <div class="card-nico mb-3">
          <% unless cocktail.imageUrl.blank? %>
            <%= image_tag cocktail.imageUrl %>
          <% end %>
          <div class="card-infos">
            <p><%= cocktail.name.upcase %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
