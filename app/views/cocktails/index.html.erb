<div class="container-nico">
  <%= link_to new_cocktail_path do %>
    <div class="btn btn-nico">
      <p>Add a cocktail</p>
    </div>
  <% end %>
  <div class="row justify-content-left">
    <% @cocktails.each do |cocktail| %>
      <div class="col-3">
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card-nico mb-3    ">
            <%= cl_image_tag cocktail.imageUrl, height: 300, width: 400, crop: :fill %>
            <div class="card-infos">
              <p><%= cocktail.name.upcase %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
